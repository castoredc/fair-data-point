<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% if title is defined %}{{ title }}{% else %}FAIR Data Point{% endif %}</title>
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}?v={{ app_version }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% if description is defined %}<meta name="description" content="{{ description }}">{% endif %}
        {% block stylesheets %}{% endblock %}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

        <script src="{{ asset('build/runtime.js') }}?v={{ app_version }}"></script>
        <script src="{{ asset('build/app.js') }}?v={{ app_version }}"></script>
    </body>
</html>
